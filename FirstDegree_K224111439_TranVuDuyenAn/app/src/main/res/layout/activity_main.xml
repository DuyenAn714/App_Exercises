<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Icon toán học -->
        <ImageView
            android:id="@+id/imgMath"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_math"
            android:layout_marginBottom="16dp" />

        <!-- Phương trình -->
        <TextView
            android:id="@+id/tvEquation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ax + b = 0"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="20dp" />

        <!-- Nhập a -->
        <EditText
            android:id="@+id/edtA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_a"
            android:inputType="numberDecimal" />

        <!-- Nhập b -->
        <EditText
            android:id="@+id/edtB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_b"
            android:inputType="numberDecimal"
            android:layout_marginTop="12dp" />

        <!-- Nút Giải -->
        <Button
            android:id="@+id/btnSolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/solve"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp" />

        <!-- Nút Làm lại -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:backgroundTint="#FFC107"
            android:textColor="#000000"
            android:layout_marginTop="12dp" />

        <!-- Nút Thoát -->
        <Button
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exit"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp" />

        <!-- Kết quả -->
        <TextView
            android:id="@+id/tvKetQua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:textStyle="italic" />

        <!-- Chọn ngôn ngữ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnLangVi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VI" />

            <Button
                android:id="@+id/btnLangEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EN"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/btnLangFr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FR"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/btnLangEs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ES"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
